<h1>Eat the Burgers!</h1>

<h2>Burgers Available for Devouring</h2>
{{#each burger}}
    {{#unless devoured}}
        <p>{{id}} {{burger_name}} 
            <button class="devour-button" data-id="{{this.id}}" data-devour="true">Eat this burger!</button>
        </p>
        
    {{/unless}}
{{/each}}

<h2>Devoured Burgers</h2>
{{#each burger}}
    {{#if devoured}}
        <p>{{id}} {{burger_name}}</p>
    {{/if}}
{{/each}}


<h2>Add a Burger!</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">What kind of burger would you like to eat?:</label>
        <input type="text" id="burg" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>